<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilang Cinta</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Bilang Cinta</h1>
    <form action="/confess" method="POST">
        <label for="to">To:</label>
        <input type="text" id="to" name="to" required>
        <label for="confession">Confession:</label>
        <textarea id="confession" name="confession" rows="4" required></textarea>
        <input type="submit" value="Submit">
    </form>

    <input type="text" id="search-bar" placeholder="Search confessions..." oninput="searchConfessions(this.value)">

    <div id="confessions">
        <% confessions.forEach(function(confession) { %>
            <div class="card">
                <h3>To: <%= confession.toWhom %></h3>
                <p><%= confession.confession %></p>
                <small><%= confession.date %></small>
            </div>
        <% }); %>
    </div>

    <script src="/scripts.js"></script>
</body>
</html>
